<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>steam.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="steam.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="HML">
      <HintPath>..\lib\HML.dll</HintPath>
    </Reference>
    <Reference Include="HML.ComplexityPropertys">
      <HintPath>..\lib\HML.ComplexityPropertys.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>